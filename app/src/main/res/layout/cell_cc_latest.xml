<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ccLogo"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="16dp"
        android:src="@drawable/ic_currency_bitcoin"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        android:layout_toEndOf="@id/ccLogo">

        <TextView
            android:id="@+id/ccName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/currency_name"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/latest_price"/>

        <TextView
            android:id="@+id/latestPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/latest_price"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/market_cap"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/marketCap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/market_cap"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/volume_24h"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/vol24H"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/volume_24h"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

    </LinearLayout>

</RelativeLayout>